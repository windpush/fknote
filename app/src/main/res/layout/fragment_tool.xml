<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/parentmainpart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="标点归入字数统计"
                        android:textColor="@color/baidublue"
                        android:textSize="18dp" />

                    <com.cengalabs.flatui.views.FlatToggleButton
                        android:id="@+id/withItem"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/isOk"
                        flatui:fl_borderWidth="2dp"
                        flatui:fl_cornerRadius="5dp"
                        flatui:fl_fontExtension="ttf"
                        flatui:fl_fontWeight="light"
                        flatui:fl_size="20dp"
                        flatui:fl_theme="@array/sky" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/withItem"
                        android:text="关"
                        android:textColor="@color/baidublue"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/isOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="开"
                        android:textColor="@color/baidublue"
                        android:textSize="16dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"

                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="开启数据统计"
                        android:textColor="@color/baidublue"
                        android:textSize="18dp" />

                    <com.cengalabs.flatui.views.FlatToggleButton
                        android:id="@+id/withWebSItem"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/isWebOk"
                        flatui:fl_borderWidth="2dp"
                        flatui:fl_cornerRadius="5dp"
                        flatui:fl_fontExtension="ttf"
                        flatui:fl_fontWeight="light"
                        flatui:fl_size="20dp"
                        flatui:fl_theme="@array/sky" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/withWebSItem"
                        android:text="关"
                        android:textColor="@color/baidublue"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/isWebOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="开"
                        android:textColor="@color/baidublue"
                        android:textSize="16dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/webAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toLeftOf="@+id/webAddressSetting"
                        android:maxLines="1"
                        android:text="请设置小说网址"
                        android:textColor="#ccc"
                        android:textSize="18dp"

                        />

                    <com.cengalabs.flatui.views.FlatButton
                        android:id="@+id/webAddressSetting"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="编辑"
                        android:textSize="15dp"
                        flatui:fl_borderWidth="2dp"
                        flatui:fl_cornerRadius="5dp"
                        flatui:fl_fontExtension="ttf"
                        flatui:fl_theme="@array/sky" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/chooseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="选择请求间隔"
                        android:textColor="@color/baidublue"
                        android:textSize="18dp" />

                    <com.cengalabs.flatui.views.FlatSeekBar
                        android:id="@+id/webTimerSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/chooseText"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:max="100"
                        android:progress="50"
                        android:maxLines="1"
                        android:text="Seek Bar"
                        android:textSize="20dip"
                        flatui:fl_theme="@array/sky" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/webTimerSetting"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="1小时"
                        android:textColor="@color/grape_darker"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/webTimerSetting"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="2小时"
                        android:textColor="@color/grape_darker"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/webTimerSetting"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:text="3小时"
                        android:textColor="@color/grape_darker"
                        android:textSize="15dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="60dp"-->
            <!--android:layout_margin="10dp"-->
            <!--app:cardBackgroundColor="@color/white"-->
            <!--app:cardCornerRadius="8dp"-->
            <!--app:cardElevation="3dp"></android.support.v7.widget.CardView>-->

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0f0f0"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:background="@drawable/parentmenushader"></RelativeLayout>
</LinearLayout>