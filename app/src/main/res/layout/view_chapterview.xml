<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="2014 05 06"
        android:textColor="@android:color/black"
        app:layout_heightPercent="20%h"
        app:layout_marginPercent="5%h"
        app:layout_textSizePercent="15%h" />

    <TextView
        android:id="@+id/chapternum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/time"
        android:gravity="center_vertical"
        android:text="第一章"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_heightPercent="20%h"
        app:layout_marginBottomPercent="5%h"
        app:layout_marginLeftPercent="15%w"
        app:layout_marginTopPercent="5%h"
        app:layout_textSizePercent="15%h"
        app:layout_widthPercent="50%w" />

    <TextView
        android:id="@+id/chaptername"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/chapternum"
        android:singleLine="true"
        android:text="超级进化"
        android:textColor="@color/font_deep_gray"
        app:layout_heightPercent="20%h"
        app:layout_marginLeftPercent="15%w"
        app:layout_textSizePercent="10%h"
        app:layout_marginTopPercent="5%h"
        app:layout_widthPercent="70%w" />
    <TextView
        android:id="@+id/tx_chaptersize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:gravity="center"
        android:text="1000\n字"
        android:textColor="@color/font_chapternum"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        app:layout_marginBottomPercent="5%h"
        app:layout_marginRightPercent="10%w"
        app:layout_marginTopPercent="5%h"
        app:layout_textSizePercent="11%h"
        android:alpha="0.7"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/snow_darker"
        app:layout_widthPercent="85%w"
        android:layout_alignParentRight="true"
        />
</com.zhy.android.percent.support.PercentRelativeLayout>